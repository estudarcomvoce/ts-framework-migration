{
  "testRegex": "(./tests/.*|\\.(spec))\\.(ts)$",
  "mapCoverage": true,
  "collectCoverage": true,
  "testEnvironment": "node",
  "coverageDirectory": "./coverage",
  "coveragePathIgnorePatterns": [
    "node_modules",
    "tests"
  ],
  "transform": {
    "^.+\\.(ts)$": "ts-jest"
  },
  "setupFiles": [
    "<rootDir>/tests/setup.ts"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "testPathIgnorePatterns": [
    "./build",
    "./tests/__mock__",
    "./tests/setup.ts"
  ]
}